---
import Layout from "./Layout.astro";

interface Props {
  title?: string;
}

const { title = "10x Poke Sky" } = Astro.props;
---

<Layout title={title}>
  <div class="min-h-screen" style="background-color: var(--color-background); color: var(--color-foreground)">
    <header class="mx-auto flex w-full max-w-6xl flex-col gap-4 px-6 pb-8 pt-10 sm:pt-12">
      <slot name="header" />
    </header>

    <main class="mx-auto w-full max-w-6xl px-6 pb-20">
      <slot />
    </main>

    <footer
      class="fixed inset-x-0 bottom-0 z-10 flex h-16 items-center justify-center backdrop-blur"
      style="background-color: color-mix(in srgb, var(--color-surface) 80%, transparent)"
    >
      <nav class="flex w-full max-w-md items-center justify-around text-sm text-muted-foreground">
        <a class="flex flex-col items-center gap-1 text-primary" href="/">Strona główna</a>
        <a class="flex flex-col items-center gap-1" href="/ai">Czat AI</a>
        <a class="flex flex-col items-center gap-1" href="/favorites">Ulubione</a>
        <a class="flex flex-col items-center gap-1" href="/moves">Ruchy</a>
        <a class="flex flex-col items-center gap-1" href="/settings">Ustawienia</a>
      </nav>
    </footer>
  </div>
</Layout>
