---
import AuthLayout from "../../layouts/AuthLayout.astro";
import LoginForm from "../../components/auth/LoginForm";

const currentUrl = new URL(Astro.request.url);
const redirectTo = currentUrl.searchParams.get("redirectTo");
const message = currentUrl.searchParams.get("message");
---

<AuthLayout title="Logowanie â€“ 10x Poke Sky">
  <LoginForm client:load redirectTo={redirectTo} message={message} />
</AuthLayout>

<style lang="postcss" is:global>
.auth-input {
  border-radius: 1rem;
  padding: 0.9rem 1.25rem;
  background: color-mix(in srgb, var(--color-background) 70%, transparent);
  border: 1px solid color-mix(in srgb, var(--color-border) 50%, transparent);
  color: var(--color-foreground);
  transition: border-color 0.2s ease, box-shadow 0.2s ease;
}

.auth-input:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-primary) 20%, transparent);
}

.auth-action {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  border: none;
  border-radius: 999px;
  padding: 0.9rem 1.5rem;
  font-weight: 600;
  color: white;
  font-size: 1rem;
  background: linear-gradient(135deg, #f33736 0%, #9c2221 100%);
  box-shadow: 0 18px 40px -22px rgba(9, 15, 11, 0.65);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.auth-action:hover {
  transform: translateY(-2px);
  box-shadow: 0 20px 44px -18px rgba(9, 15, 11, 0.7);
}
</style>
