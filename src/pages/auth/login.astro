---
import AuthLayout from "../../layouts/AuthLayout.astro";
---

<AuthLayout title="Logowanie – 10x Poke Sky">
  <form class="relative z-10 flex flex-col gap-5">
    <header class="space-y-2 text-center">
      <h1 class="text-3xl font-semibold">Witaj ponownie!</h1>
      <p class="text-sm text-muted-foreground">Zaloguj się, aby kontynuować swoją przygodę z Pokédexem.</p>
    </header>

    <label class="flex flex-col gap-2">
      <span class="text-sm font-medium">Adres e-mail</span>
      <input class="auth-input" type="email" placeholder="misty@pokemon.com" required />
    </label>

    <label class="flex flex-col gap-2">
      <span class="text-sm font-medium">Hasło</span>
      <input class="auth-input" type="password" placeholder="••••••••" required />
    </label>

    <div class="flex items-center justify-between text-sm">
      <label class="flex items-center gap-2">
        <input
          type="checkbox"
          class="size-4 rounded border border-[color:color-mix(in_srgb,var(--color-border)_60%,transparent)]"
        />
        Zapamiętaj mnie
      </label>
      <a class="text-primary" href="/auth/forgot">Zapomniałem hasła</a>
    </div>

    <button class="auth-action" type="submit">Zaloguj się</button>

    <p class="text-center text-sm text-muted-foreground">
      Nie masz konta? <a class="text-primary" href="/auth/register">Zarejestruj się</a>
    </p>
  </form>
</AuthLayout>

<style lang="postcss">
.auth-input {
  border-radius: 1rem;
  padding: 0.9rem 1.25rem;
  background: color-mix(in srgb, var(--color-background) 70%, transparent);
  border: 1px solid color-mix(in srgb, var(--color-border) 50%, transparent);
  color: var(--color-foreground);
  transition: border-color 0.2s ease, box-shadow 0.2s ease;
}

.auth-input:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-primary) 20%, transparent);
}

.auth-action {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  border: none;
  border-radius: 999px;
  padding: 0.9rem 1.5rem;
  font-weight: 600;
  color: white;
  font-size: 1rem;
  background: linear-gradient(135deg, #f33736 0%, #9c2221 100%);
  box-shadow: 0 18px 40px -22px rgba(9, 15, 11, 0.65);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.auth-action:hover {
  transform: translateY(-2px);
  box-shadow: 0 20px 44px -18px rgba(9, 15, 11, 0.7);
}
</style>
